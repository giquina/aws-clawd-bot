# AWS Configuration
# Get these from: https://console.aws.amazon.com/iam/home#/security_credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=eu-west-2

# Twilio WhatsApp Configuration
# Get these from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=+14155238886

# Your WhatsApp Number (include country code, e.g., +447700123456)
YOUR_WHATSAPP=+44XXXXXXXXXX

# GitHub Configuration
# Create token at: https://github.com/settings/tokens
# Required scopes: repo, workflow, admin:org
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_USERNAME=giquina

# GitHub Webhook Secret (optional but recommended)
# Generate a secret and add it to your repo's webhook settings
# Settings > Webhooks > Add webhook > Secret
GITHUB_WEBHOOK_SECRET=

# Repositories to Monitor (comma-separated)
REPOS_TO_MONITOR=armora,gqcars-manager,JUDO

# Claude AI Configuration (REQUIRED)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your_key_here

# Llama AI Configuration (LEGACY - not used)
LLAMA_API_URL=http://llama:11434/api/generate
LLAMA_MODEL=llama-3.2-1b
LLAMA_CONTEXT_SIZE=2048

# Application Settings
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

